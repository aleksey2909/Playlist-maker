<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="@string/search"
        app:titleTextColor="@color/search_title_color"
        app:titleTextAppearance="@style/CustomMaterialToolbar"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:navigationIconTint="@color/search_title_color"
        />

    <EditText
        android:id="@+id/searchEditText"
        style="@style/SearchEditTextStyle"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableEnd="@drawable/ic_clear_16x16"
        android:inputType="text"
        android:singleLine="true"
        android:imeOptions="actionDone"/>

    <ImageView
        android:layout_marginTop="102dp"
        android:id="@+id/icProblem"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvProblem"
        android:textColor="@color/search_title_color"
        android:textSize="19sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ys_display_medium"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:id="@+id/btnReconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        app:backgroundTint="@color/search_title_color"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:background="@drawable/rounded_background"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>