<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/ivAlbumArt"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="13dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/trackTitle"
        style="@style/TrackTitleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivAlbumArt"
        app:layout_constraintEnd_toStartOf="@id/ivArrow"
        app:layout_constraintTop_toTopOf="@id/ivAlbumArt"
        app:layout_constraintBottom_toTopOf="@id/tvArtist"
        app:layout_constraintVertical_chainStyle="packed"
        android:maxLines="1"
        tools:text="Billie Jean" />

    <TextView
        android:id="@+id/tvArtist"
        style="@style/ArtistTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/trackTitle"
        app:layout_constraintBottom_toBottomOf="@id/ivAlbumArt"
        app:layout_constraintStart_toStartOf="@id/trackTitle"
        app:layout_constraintEnd_toStartOf="@id/ic"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintHorizontal_bias="0"
        tools:text="Michael Jackson" />

    <ImageView
        android:id="@+id/ic"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:src="@drawable/ic_dot_13"
        app:layout_constraintEnd_toStartOf="@id/tvDuration"
        app:layout_constraintBottom_toBottomOf="@id/tvArtist"
        app:layout_constraintStart_toEndOf="@id/tvArtist"
        app:layout_constraintTop_toTopOf="@id/tvArtist" />

    <TextView
        android:id="@+id/tvDuration"
        style="@style/ArtistTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ic"
        app:layout_constraintBottom_toBottomOf="@id/ic"
        app:layout_constraintStart_toEndOf="@id/ic"
        app:layout_constraintEnd_toEndOf="@id/trackTitle"
        tools:text="4:35" />

    <ImageView
        android:id="@+id/ivArrow"
        style="@style/ArrowIconStyle"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
